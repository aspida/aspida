{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build:aspida": "yarn workspace aspida build",
    "build:mock": "yarn workspace aspida-mock build",
    "release": "standard-version --skip.tag",
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "snapshot:aspida": "ts-node packages/aspida/__tests__/utils/updateSnapshot",
    "snapshot:mock": "ts-node packages/aspida-mock/__tests__/utils/updateSnapshot",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.25",
    "@types/minimist": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.14.0",
    "axios": "^0.19.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.2.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "standard-version": "^7.0.1",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  }
}
