{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:aspida": "npm run build:aspida && cd packages/aspida && node bin/index.js --build",
    "build:aspida": "npm run rimraf -- aspida && tsc -p packages/aspida",
    "build:axios": "npm run rimraf -- aspida-axios && tsc -p packages/aspida-axios",
    "build:fetch": "npm run rimraf -- aspida-fetch && tsc -p packages/aspida-fetch",
    "build:node-fetch": "npm run rimraf -- aspida-node-fetch && tsc -p packages/aspida-node-fetch",
    "build:ky": "npm run rimraf -- aspida-ky && tsc -p packages/aspida-ky",
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "release": "standard-version --skip.tag",
    "release:major": "npm run release -- --release-as major",
    "release:minor": "npm run release -- --release-as minor",
    "release:patch": "npm run release -- --release-as patch",
    "rimraf": "node -e \"require('fs').rmdirSync('packages/' + process.argv[1] + '/dist', { recursive: true })\"",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "extends": [
      "standard",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint",
      "prettier/standard"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "root": true,
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "arrowParens": "avoid",
    "singleQuote": true,
    "trailingComma": "none",
    "overrides": [
      {
        "files": [
          "*.md",
          "*.yml"
        ],
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.10",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "aspida-mock": "^0.8.0",
    "axios": "^0.20.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "express": "^4.17.1",
    "jest": "^25.5.4",
    "ky": "^0.23.0",
    "node-fetch": "^2.6.0",
    "prettier": "2.1.0",
    "standard-version": "^9.0.0",
    "ts-jest": "^25.5.1",
    "typescript": "^3.9.7"
  }
}
